{
    "name": "Google Calendar Clipboard",
    "description": "Copy the schedule for the day.",
    "version": "0.1.0",
    "manifest_version": 3,
    "permissions": [
        "contextMenus",
        "scripting",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://calendar.google.com/calendar/u/0/r/*"
    ],
    "options_page": "options.html",
    "background": {
        "matches": [
            "https://calendar.google.com/calendar/u/0/r/*"
        ],
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png"
        }
    }
}
